<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.youyuan.vhr.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="org.youyuan.vhr.bean.Role">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="nameZh" jdbcType="VARCHAR" property="namezh"/>
    </resultMap>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from role
    where id = #{id,jdbcType=INTEGER}
  </delete>
    <insert id="insert" parameterType="org.youyuan.vhr.bean.Role">
    insert into role (id, name, nameZh
      )
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{namezh,jdbcType=VARCHAR}
      )
  </insert>
    <update id="updateByPrimaryKey" parameterType="org.youyuan.vhr.bean.Role">
    update role
    set name = #{name,jdbcType=VARCHAR},
      nameZh = #{namezh,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select id, name, nameZh
    from role
    where id = #{id,jdbcType=INTEGER}
  </select>
    <select id="selectAll" resultMap="BaseResultMap">
    select id, name, nameZh
    from role
  </select>

    <!--根据rid删除角色-->
    <delete id="deleteByRid">
    DELETE FROM menu_role WHERE rid=#{rid}
  </delete>

    <!--添加角色菜单关系-->
    <insert id="insertRecord">
        insert into menu_role (mid,rid) values
        <foreach collection="mids" separator="," item="mid">
            (#{mid},#{rid})
        </foreach>
    </insert>

    <!--根据hrid删除Hr的role-->
    <delete id="deleteRolesByHrid">
    delete from hr_role where hrid=#{hrid}
  </delete>

    <!--添加Hr的role-->
    <insert id="addHrRoles">
        insert into hr_role (hrid,rid) values
        <foreach collection="rids" item="rid" separator=",">
            (#{hrid},#{rid})
        </foreach>
    </insert>

    <!--删除角色菜单关系-->
    <delete id="deleteRoleWithMenu">
    delete from menu_role where rid = #{rid}
  </delete>
</mapper>